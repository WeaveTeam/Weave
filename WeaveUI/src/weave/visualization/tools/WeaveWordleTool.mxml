<SimpleVisTool xmlns="weave.visualization.tools.*" 
			   xmlns:mx="http://www.adobe.com/2006/mxml"
			   xmlns:ui="weave.ui.*" 
			   layout="absolute">
	<mx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			import weave.core.SessionManager;
			import weave.api.core.ILinkableDynamicObject;
			import weave.api.getCallbackCollection;
			import weave.data.AttributeColumns.ColorColumn;
			import weave.data.AttributeColumns.DynamicColumn;
			import weave.data.AttributeColumns.FilteredColumn;
			import weave.data.AttributeColumns.StringLookup;
			import weave.ui.AttributeSelectorPanel;
			import weave.utils.BitmapText;
			import weave.utils.DebugUtils;
			import weave.visualization.plotters.WeaveWordlePlotter;
			
			private var plotter:WeaveWordlePlotter = null;
			override protected function constructor():void
			{
				super.constructor();
				// lock dynamic objects into place
				plotter = initializePlotters(WeaveWordlePlotter, false);
				
				visualization.marginBottom.value = "80";
				visualization.marginTop.value    = "80";
				visualization.marginLeft.value   = "80";
				visualization.marginRight.value  = "80";
				visualization.enableZoomAndPan.value = false;
				
				visualization.bottomMarginClickCallbacks.addImmediateCallback(this, function():void { AttributeSelectorPanel.openDefaultSelector(plotter.wordColumn); });
				
				getCallbackCollection(plotter).addGroupedCallback(this, handlePanelTitleChange);
			}
			
			override protected function handlePanelTitleChange():void
			{
				super.handlePanelTitleChange();
				if (!panelTitle.value)
					title = "Wordle visualization";
			}
			
			override public function dispose():void
			{				
				super.dispose();
			}
		]]>
	</mx:Script>
	
	<ui:ControlPanel>
			<mx:Panel id="VizControlsPanel" 
					  label="Visualization Controls" 
					  headerHeight="2"
					  borderColor="0x000000" 
					  backgroundColor="0xCCCCCC" 
					  backgroundAlpha="0.0" 
					  borderThickness="0.0" 
					  height="100%" 
					  width="100%" 
					  borderAlpha="0.2" 
					  borderStyle="none">
			</mx:Panel>
	</ui:ControlPanel>
</SimpleVisTool>
