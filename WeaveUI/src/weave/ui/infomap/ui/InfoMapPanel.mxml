					_entityColumnList.continueButton.addEventListener(MouseEvent.CLICK,handleContinueButtonClick);
					PopUpManager.centerPopUp(_entityColumnList);
				}
				_loadingText.setProgress(_totalParents-_parentCount,_totalParents);
			}
			
