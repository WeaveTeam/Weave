			private function handleGetChildIds(event:ResultEvent, token:Object = null):void
			{
				var cols:Array = (event.result as Array);
				var source:WeaveDataSource = Weave.root.getObject(token as String) as WeaveDataSource;
				var servlet:WeaveDataServlet = new WeaveDataServlet(source.url.value);
				var asyncToken:AsyncToken = servlet.getEntitiesById(cols);
				addAsyncResponder(asyncToken,handleGetChildEntities,handleGetChildEntitiesFault,token);
			}
			
