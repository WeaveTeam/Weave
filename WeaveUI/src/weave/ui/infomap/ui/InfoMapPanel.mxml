			private function extractEntityColumns():void
			{
				_loadingText = new InfoMapsProgressBar();
				addChild(_loadingText);
				
				_loadingText.label= "Selecting Entity Columns";
				
				/* Get all the referenced Columns*/
				_referencedColumns = WeaveAPI.SessionManager.getLinkableDescendants(Weave.root,ReferencedColumn);
				if(_referencedColumns.length == 0)
					handleEmptyEntityExtraction();
				/* Iterate through each referenced column and get its parent */
				WeaveAPI.StageUtils.startTask(this,_iterateReferencedColumns,WeaveAPI.TASK_PRIORITY_PARSING);
			}
			
			private function _iterateReferencedColumns():Number
			{
				if(_referencedColumns.length == 0)
					return 1;
				_parentCount= 0;
				_totalParents= 0;
				
				var col:ReferencedColumn = _referencedColumns.pop() as ReferencedColumn;
				if(col.dynamicColumnReference.internalObject is IColumnReference)
				{
					var colRef:IColumnReference = col.dynamicColumnReference.internalObject as IColumnReference;
					var dataSource:IDataSource = colRef.getDataSource();
					
					/* If it is a Weave Data Sourcfe get parents from Weave Data Server*/
					if(dataSource is WeaveDataSource)
					{
						var colID:String = col.getMetadata('weaveEntityId');
						var dataService:WeaveDataServlet = new WeaveDataServlet((dataSource as WeaveDataSource).url.value);
						var token:AsyncToken = dataService.getParents(NumberUtils.getNumberFromNumberOrPercent(colID,0));
						var sourceName:String  = Weave.root.getName(dataSource);
						addAsyncResponder(token,handleGetParents,handleGetParentsFault,sourceName);
					}
				}
				if(_referencedColumns.length == 0)
					return 1;
				else 
					return 0;
			}
			
			private var _parentCount:int = 0;
			private var _totalParents:int = 0;
			private var _refColsCount:int = 0;
			private function handleGetParents(event:ResultEvent,token:Object=null):void
			{
				var parents:Array = (event.result as ArrayCollection).source;
				/* We use this count to keep track of when all the parents' children have been iterated */
				_parentCount += parents.length;
				_totalParents += _parentCount;
				if(_parentCount ==0)
				{
					handleEmptyEntityExtraction();
				}
				for each (var parent:Number in parents)
				{
					var source:WeaveDataSource = Weave.root.getObject(token as String) as WeaveDataSource;
					var servlet:WeaveDataServlet = new WeaveDataServlet(source.url.value);
					var asyncToken:AsyncToken = servlet.getEntityChildIds(parent);
					addAsyncResponder(asyncToken,handleGetChildIds,handleGetChildIdsFault,token);
				}
			}
			
			private function handleGetParentsFault(event:FaultEvent,token:Object=null):void
			{
				reportError("Error getting parent ID");				
			}
			
			private function handleEmptyEntityExtraction():void
