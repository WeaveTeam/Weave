			private var _childEntities:Array = [];
			private var _columnsText:String = "";
			private function handleGetChildEntities(event:ResultEvent,token:Object = null):void
			{
				_parentCount--;
				_childEntities = event.result as Array;
				WeaveAPI.StageUtils.startTask(this,function():Number{
					if(_childEntities.length == 0)
					{
						return 1;					
					}
					var obj:Object = _childEntities.pop();
					if(obj.publicMetadata.dataType == 'string')
					{
						var objName:String = "";
						if(obj.publicMetadata.name)
						{
							objName = obj.publicMetadata.name;
						}else if (obj.publicMetadata.title)
						{
							objName = obj.publicMetadata.title;
						}
						objName += "-" + obj.id;
						if(entityColumnsHashmap.getObject(objName) ==null)
						{
							var col:ReferencedColumn = entityColumnsHashmap.requestObject(objName,ReferencedColumn,false);
							col.delayCallbacks();
							var attrCol:HierarchyColumnReference = col.dynamicColumnReference.requestLocalObject(HierarchyColumnReference,false);
							var attrNode:XML = <attribute weaveEntityId={obj.id}/>;
							attrCol.hierarchyPath.value = attrNode;
							attrCol.dataSourceName.value = token as String;
							col.resumeCallbacks();
						}
					}
					if(obj.publicMetadata.dataType != null && obj.publicMetadata.dataType != 'geometry')
					{
						if(obj.publicMetadata.name)
						{
							_columnsText += " " + obj.publicMetadata.name;
						}else if (obj.publicMetadata.title)
						{
							_columnsText += " " +obj.publicMetadata.title;
						}
					}
					
					if(_childEntities.length == 0)
					{
						return 1;					
					}
					else
					{
						return 0;
					}
				},WeaveAPI.TASK_PRIORITY_PARSING,finishEntitySelection);
			}
			
