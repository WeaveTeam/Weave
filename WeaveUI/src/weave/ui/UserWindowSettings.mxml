	<mx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			
			import weave.api.linkBindableProperty;
			import weave.core.SessionManager;
			import weave.visualization.tools.SimpleVisTool;

			[Bindable]
			private var _labelWidth:int = 100;
			
			[Bindable]
			private var _tool:DraggablePanel = null;
			
			public function set targetTool(value:DraggablePanel):void
			{
				if (_tool != value && _tool != null)
					throw new Error("UserWindowSettings.targetTool should not be set more than once");
				
				_tool = value;
			}
			override protected function childrenCreated():void
			{
				super.childrenCreated();

				if(_tool is SimpleVisTool)
				{
					(_tool as SimpleVisTool).toolTitle.addGroupedCallback(this, updateTitleInput, true);
					linkBindableProperty((_tool as SimpleVisTool).visualization.marginLeft, toolMarginLeft, 'value');
					linkBindableProperty((_tool as SimpleVisTool).visualization.marginTop, toolMarginTop, 'value');
					linkBindableProperty((_tool as SimpleVisTool).visualization.marginBottom, toolMarginBottom, 'value');
					linkBindableProperty((_tool as SimpleVisTool).visualization.marginRight, toolMarginRight, 'value');
					linkBindableProperty((_tool as SimpleVisTool).enableTitle, windowTitleToggle, 'selected');
				}
				_tool.panelBorderColor.addGroupedCallback(this, borderColorCallback, true);
				_tool.panelBackgroundColor.addGroupedCallback(this, backgroundColorCallback, true);
				_tool.addEventListener(FlexEvent.UPDATE_COMPLETE, function(..._):void { borderColorCallback(); backgroundColorCallback(); });
			}
			
			private function updateTitleInput():void
			{
				titleInput.text = (_tool as SimpleVisTool).toolTitle.value;
			}
			
			private function handleTitleInput():void
			{
				if(_tool is SimpleVisTool)
				{
					if (titleInput.text == '')
						(_tool as SimpleVisTool).toolTitle.value = null;
					else
						(_tool as SimpleVisTool).toolTitle.value = titleInput.text;
				}else
				{
					_tool.panelTitle.value = titleInput.text;
				}
			}
			
			private function borderColorCallback():void
			{
				borderColorPicker.selectedColor = _tool.getStyle('borderColor');
			}
			private function borderColorPicked():void
			{
				_tool.panelBorderColor.value = borderColorPicker.selectedColor;
			}
			
			
			private function backgroundColorCallback():void
			{
				backgroundColorPicker.selectedColor = _tool.getStyle('backgroundColor');
			}
			private function backgroundColorPicked():void
			{
				_tool.panelBackgroundColor.value = backgroundColorPicker.selectedColor;
			}
		]]>
	</mx:Script>
</mx:VBox>
