<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" label="Window Settings"
	creationPolicy="all">
	<mx:HBox width="100%">
		<mx:Label width="{_labelWidth}" text="Window Title:"/>
		<mx:TextInput id="titleInput" 
					  width="90%"
					  toolTip="Entering a title here will override the automatic title generated by the tool."
					  change="handleTitleInput()"/>
	</mx:HBox>
	<mx:HBox enabled="{_tool is SimpleVisTool}" visible="{_tool is SimpleVisTool}" width="100%" id="marginProperties" verticalAlign="middle">
		<mx:Label width="{_labelWidth}" text="Axis Margins:"/>
		
		<mx:NumericStepper id = "toolMarginLeft"
						   minimum="0"
						   maximum="200"
						   stepSize="5"
						   toolTip="Enter a number of pixels to use for the left margin"
						  />
		<mx:VBox>
			<mx:NumericStepper id = "toolMarginTop"
							   minimum="0"
							   maximum="200"
							   stepSize="5"
							   toolTip="Enter a number of pixels to use for the top margin"
							   />
			<mx:NumericStepper id = "toolMarginBottom"
							   minimum="0"
							   maximum="200"
							   stepSize="5"
							   toolTip="Enter a number of pixels to use for the bottom margin"
							   />
		</mx:VBox>
		<mx:NumericStepper id = "toolMarginRight"
						   minimum="0"
						   maximum="200"
						   stepSize="5"
						   toolTip="Enter a number of pixels to use for the right  margin"
						   />
	</mx:HBox>
	<mx:HBox
			width="100%"
			borderStyle="solid"
			paddingLeft="5" paddingTop="5" paddingBottom="5" paddingRight="5" cornerRadius="5">
		<mx:VBox width="100%" height="100%">
			<mx:CheckBox id="windowBorderToggle"
						 label="Show Borders" 
						 fontWeight="bold" 
						 fontSize="12" 
						 selected="true"
						 toolTip="Selecting this option will turn the borders of this tool on or off"
						 initialize="linkBindableProperty(_tool.enableBorders, windowBorderToggle, 'selected');"/>
			<mx:CheckBox id="windowTitleToggle"
						 label="Show Title" 
						 fontWeight="bold" 
						 fontSize="12" 
						 selected="true"
						 toolTip="Selecting this option will turn the title of this tool on or off"
						 enabled="{_tool is SimpleVisTool}"
						 />
			<mx:CheckBox label="Allow Dragging" 
						 fontWeight="bold"
						 fontSize="12"
						 selected="true"
						 id="draggableCheckBox" 
						 toolTip="Selecting this option will enable the user to move the tool by clicking on the header and dragging"
						 initialize="linkBindableProperty(_tool.draggable,draggableCheckBox,'selected')"/>
			<mx:CheckBox label="Allow Resizing" 
						 fontWeight="bold"
						 fontSize="12" 
						 selected="true"
						 toolTip="Selecting will enable the user to resize this tool" 
						 id="resizeCheckBox" 
						 initialize="linkBindableProperty(_tool.resizeable, resizeCheckBox,'selected')"/>
		</mx:VBox>	
		<mx:VBox width="100%" height="100%">
			<mx:CheckBox label="Allow Pinning to back" 
						 fontWeight="bold"
						 fontSize="12"
						 selected="true" 
						 id="windowPinningToBackCheckBox" 
						 toolTip="Selecting this option will enable the user to pin this tool to the back of the stage"
						 initialize="linkBindableProperty(_tool.pinnableToBack,windowPinningToBackCheckBox, 'selected')"/>
			<mx:CheckBox label="Allow Pinning" 
						 fontWeight="bold"
						 fontSize="12"
						 selected="true" 
						 id="windowPinningCheckBox" 
						 toolTip="Selecting this option will enable the user to pin this tool"
						 initialize="linkBindableProperty(_tool.pinnable,windowPinningCheckBox, 'selected')"/>
			<mx:CheckBox label="Allow Minimization" 
						 fontWeight="bold"
						 fontSize="12"
						 selected="true" 
						 id="windowMinimizeCheckBox" 
						 toolTip="Selecting this option will enable the user to minimize this tool"
						 initialize="linkBindableProperty(_tool.minimizable,windowMinimizeCheckBox, 'selected')"/>
			<mx:CheckBox label="Allow Maximization" 
						 fontWeight="bold"
						 fontSize="12"
						 selected="true" 
						 id="windowMaximizeCheckBox" 
						 toolTip="Selecting this option will enable the user to maximize this tool"
						 initialize="linkBindableProperty(_tool.maximizable,windowMaximizeCheckBox,'selected');"/>
			<mx:CheckBox label="Allow Closing" 
						 fontWeight="bold"
						 fontSize="12" 
						 id="windowCloseCheckBox" 
						 selected="true"
						 toolTip="Selecting or deselecting this option will enable or disable the user to close this tool"
						 initialize="linkBindableProperty(_tool.closeable,windowCloseCheckBox,'selected')"/>
		</mx:VBox>
	</mx:HBox>

	<mx:VBox borderStyle="solid"
			 paddingLeft="5" paddingTop="5" paddingBottom="5" paddingRight="5"
			 backgroundAlpha="0.8" backgroundColor="white"
			 id="visBackgroundProperties" cornerRadius="5"
			 width="100%">
		
		<mx:HBox>
			<mx:ColorPicker id="borderColorPicker"
							toolTip="Select a color for the border of this visualization - this will have no effect if the border is not enabled"
