			<mx:TextArea id="log" click="handleConsoleLogClick()" mouseDown="handleConsoleLogClick()" width="100%" height="100%" minHeight="0" editable="false"/>
			<mx:TextInput id="console" width="100%" enter="runCommand()"/>
		</mx:VBox>
