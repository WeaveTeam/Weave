				var str:String = '';
				if (path)
				{
					path = path.map(
						function(item:*, i:*, a:*):*
						{
							return item ? Compiler.encodeString(item) : 'null';
						}
					);
					str = "[" + path.join(", ") + "]";
				}
				_lastCopiedPathStr = str;
				Clipboard.generalClipboard.setData(ClipboardFormats.TEXT_FORMAT, str);
			}
